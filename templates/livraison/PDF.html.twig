    <script src="https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js"></script>

    <div id="qrcode"></div>
    <script>
        const qrcode = new QRCode(document.getElementById('qrcode'), {
            text: '\t--- Livraison num : {{ livraison.id }} ---\nReference : {{ livraison.nom }} \nClient : {{ livraison.user.prenom}} \nLivreur : {{ livraison.livreur.prenom}} \nCommande id : {{ livraison.commande}} \nEtat : {{ livraison.etat}} \n',
            width: 128,
            height: 128,
            colorDark : '#000',
            colorLight : '#fff',
            correctLevel : QRCode.CorrectLevel.H
        });
    </script>

    <img id="image_qr" style="width: 120px;height: 120px;" src="{{ qr_code_data_uri(" Reference livraison : "~livraison.id~"\n**** Livraison nom : "~livraison.nom~"\n**** Nom Client : "~livraison.user.prenom~"\n**** Nom Livreur : "~livraison.livreur.prenom~"\n**** Numéro Commande : "~livraison.commande)}}" />

</div>