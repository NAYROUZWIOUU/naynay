{% extends 'adminTemplate.html.twig' %}

{% block stylesheets %}
    <style>
        select{
            display: block;
            width: 100%;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <nav class="navbar navbar-dark bg-dark mb-3 rounded">
        <span class="navbar-brand mb-0 h1">Liste des utilisateurs</span>
    </nav>
    <div class="table-responsive">
    <table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Nom</th>
        <th scope="col">Prenom</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
        <th scope="col">Date</th>
        <th scope="col">Téléphone</th>
        <th scope="col">Adresse</th>
        <th scope="col">Role</th>
    </tr>
    </thead>
    <tbody>
    {% for utils in users %}


            <tr>
                <td>{{ utils.id }}</td>
                <td>{{ utils.nom }}</td>
                <td>{{ utils.prenom }}</td>
                <td>{{ utils.email }}</td>
                <td>{{ utils.password }}</td>
                <td>{{ utils.date |date('d-m-Y') }}</td>
                <td>{{ utils.numTel }}</td>
                <td>{{ utils.adresse }}</td>
                <td>{{ utils.roles[0] }}</td>
                <td>
                    <a href="{{ path('app_user_edit',{'id': utils.id }) }}" class="btn btn-warning"><i class="fas fa-pen"> Modifier</i></a>
                    <a href="{{ path('app_user_delete',{'id': utils.id }) }}" class="btn btn-danger"><i class="fas fa-trash"> Supprimer</i></a>
                </td>
            </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}